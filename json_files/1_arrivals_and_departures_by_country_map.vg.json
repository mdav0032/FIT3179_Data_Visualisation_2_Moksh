{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Total Arrivals and Departures by Country"},
    "width": 800,
    "height": 400,
    "projection": { "type": "equalEarth" },
    
    "params": [
        {
            "name": "travel_selection",
            "value": "total_arrivals_sum",
            "bind": {
                "input": "radio",
                "options": [
                    "total_arrivals_sum",
                    "total_departures_sum"
                ],
                "labels": [
                    "Arrivals",
                    "Departures"
                ],
                "name": "Select type of travel: "
            }
        }
    ],
    
    "layer": [
        {
            "data": {
              "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/json_files/oceans.topojson",
              "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {
                "type": "geoshape", 
                "fill": "skyblue"
            }
        },
        
        {
            "data": { 
                "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/json_files/ne_110m.topojson",
                "format": { 
                    "type": "topojson", 
                    "feature": "ne_110m_graticules_30" 
                } 
            },
            "mark": { 
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        
        {
            "data": { 
                "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/json_files/ne_110m.topojson",
                "format": { 
                    "type": "topojson", 
                    "feature": "ne_110m_admin_0_countries" 
                } 
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/data_files/Data_Extract_From_World_Development_Indicators_Modified_Arrivals.csv"
                        },
                        "key": "Country Name",
                        "fields": ["total_arrivals_sum"]
                    }
                },
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/data_files/Data_Extract_From_World_Development_Indicators_Modified_Departures.csv"
                        },
                        "key": "Country Name",
                        "fields": ["total_departures_sum"]
                    }
                },
                {
                    "fold": ["total_arrivals_sum", "total_departures_sum"],
                    "as": ["type_of_travel", "value"]
                },
                {
                    "calculate": "datum.value / 1000000",
                    "as": "ppl_in_millions"
                },
                {
                    "calculate": "datum.value > 0",
                    "as": "is_valid"
                },
                {
                    "filter": "datum.type_of_travel == travel_selection"
                }
            ],
            "mark": { 
                "type": "geoshape", 
                "stroke": "darkgray",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "condition": {
                        "test": "datum.ppl_in_millions === null || datum.ppl_in_millions === 0",
                        "value": "#e3e5e5"
                    },
                    "field": "ppl_in_millions",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [10, 50, 100, 500, 1000, 2000, 3000, 4000],
                        "range": ["#f7fcf5", "#e5f5e0", "#c7e9c0", "#a1d99b", "#74c476", "#41ab5d", "#238b45", "#006d2c", "#00441b"]
                    },
                    "title": "Number of tourists (in millions)"
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country Name"
                    },
                    {
                        "field": "ppl_in_millions",
                        "type": "quantitative",
                        "title": "Tourists (in millions)",
                        "format": ".2f"
                    },
                    {
                        "field": "is_valid",
                        "type": "nominal",
                        "title": "Does data exist for country"
                    }
                ]
            }
        }
    ]
}