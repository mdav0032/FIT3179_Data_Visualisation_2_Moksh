{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 400,
    "padding": 10,
    "autosize": "pad",
    "projection": { "type": "mercator" },
    
    "params": [
        {
            "name": "travel_selection",
            "value": "Arrivals",
            "bind": {
                "input": "radio",
                "options": [
                    "Arrivals",
                    "Departures"
                ],
                "labels": [
                    "Arrivals",
                    "Departures"
                ],
                "name": "Select type of travel: "
            }
        }
    ],

    "layer": [
        {
            "data": { 
                "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/json_files/STE_2021_AUST_GDA2020.topojson",
                "format": { 
                    "type": "topojson", 
                    "feature": "STE_2021_AUST_GDA2020" 
                } 
            },
            
            "mark": { 
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 0.3
            }
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/mdav0032/FIT3179_Data_Visualisation_2_Moksh/main/data_files/Aus_airport_passenger_data.csv"
            },

            "transform": [
                {
                    "fold": ["Int_Pax_In", "Int_Pax_Out"],
                    "as": ["travel_type_int", "num_passengers_int"]
                },
                {
                    "fold": ["Dom_Pax_In", "Dom_Pax_Out"],
                    "as": ["travel_type_dom", "num_passengers_dom"]
                },
                {
                    "filter": "travel_selection == 'Arrivals' ? (datum.travel_type_int == 'Int_Pax_In' || datum.travel_type_dom == 'Dom_Pax_In') : (datum.travel_type_int == 'Int_Pax_Out' || datum.travel_type_dom == 'Dom_Pax_Out')"
                },
                {
                    "calculate": "'Note:; - Blue scheme represents the Domestic passengers.; - Red scheme represents the International passengers.'",
                    "as": "text_annotation_raw"
                },
                {
                    "calculate": "split(datum.text_annotation_raw, ';')",
                    "as": "text_annotation"
                }
            ],

            "resolve": {
                "scale": {
                    "color": "independent"
                }
            },

            "layer": [
                {
                    "mark": {
                        "type": "tick"
                    },
        
                    "encoding": {
                        "longitude": {
                            "field": "Longitude_Dom",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Latitude_Dom",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "num_passengers_dom",
                            "type": "quantitative",
                            "title": "Number of Domestic Passengers",
                            "scale": {
                                "rangeMin": 5,
                                "rangeMax": 50
                            },
                            "legend": false
                        },
                        "color": {
                            "field": "num_passengers_dom",
                            "type": "quantitative",
                            "title": "Number of Domestic Passengers",
                            "scale": {
                                "range": ["#259cc6", "#032b5f"]
                            },
                            "legend": false
                        },
                        "tooltip": [
                            {
                                "field": "Airport",
                                "type": "nominal"
                            },
                            {
                                "field": "num_passengers_dom",
                                "type": "quantitative",
                                "title": "Number of Domestic Passengers",
                                "format": ",.7r"
                            }
                        ]
                    }
                },

                {
                    "mark": {
                        "type": "tick"
                    },
        
                    "encoding": {
                        "longitude": {
                            "field": "Longitude_Int",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Latitude_Int",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "num_passengers_int",
                            "type": "quantitative",
                            "title": "Number of International Passengers",
                            "scale": {
                                "rangeMin": 5,
                                "rangeMax": 50
                            },
                            "legend": false
                        },
                        "color": {
                            "field": "num_passengers_int",
                            "type": "quantitative",
                            "title": "Number of International Passengers",
                            "scale": {
                                "range": ["#ea8743", "#c83418"]
                            },
                            "legend": false
                        },
                        "tooltip": [
                            {
                                "field": "Airport",
                                "type": "nominal"
                            },
                            {
                                "field": "num_passengers_int",
                                "type": "quantitative",
                                "title": "Number of International Passengers",
                                "format": ",.7r"
                            }
                        ]
                    }
                },

                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "dx": -345,
                        "dy": 160,
                        "baseline": "middle",
                        "fontStyle": "italic",
                        "fontWeight": "lighter",
                        "fontSize": 13
                    },
        
                    "encoding": {
                        "text": { "field": "text_annotation" }
                    }
                }
            ]
        }
    ],

    "config": {
        "background": "#EAF1F4",
        "tick": {
            "thickness": 3
        },
        "view": {
            "stroke": null
        }
    }
}